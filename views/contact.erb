<div id="contact-div">

<h1>Please contact us and we will get back to you as soon as possible...</h1>

  <div class="container-form">
    <form method="POST" action="/contact">

      <label for="fname">First name</label>
      <input type="text" id="fname" name="fname" placeholder="First name..."><br>

      <label for="lname">Last name</label>
      <input type="text" id="lname" name="lname" placeholder="Last name..."><br>

      <label for="country">Country</label>
      <select id="country" name="country">
      <option value="USA">USA</option>
      <option value="international">international</option>
      </select>
      <br>

      <label for="subject">Subject</label>
      <input type="text" id="subject" name="subject" placeholder="subject"><br>

      <label for="message">Enter message below</label>
          <div id="subject-2">
          250 characters remaining
          </div>
          <textarea id="message" onkeydown="keyDown()" name="message" placeholder="Enter message here..." style="height:200px"></textarea><br>
      <input type="submit" value="Submit">
    </form>

    <script>
    //Uses a twitter-like keyup count to limit the number of characters in the subject
    //box to avoid unnecessary content
      var characterCount = document.querySelector("#subject-2");
      var textBox = document.querySelector("#message");

      function keyDown(e) {
        var length = textBox.value.length;
        characterCount.innerText = (250 - length) + " characters remaining";

        if (length >= 250) {
          event.preventDefault();
          characterCount.innerText = " Maximum characters reached!";
        }
      }
    </script>
  </div>
</div>
