<div id="contact-div">

<h1>Please contact us and we will get back to you as soon as possible...</h1>

  <div class="container-form">
    <form method="POST" action="/contact">

      <label for="fname">Full name</label>
      <input type="text" id="fname" name="from" placeholder="Full name..."><br>

      <label for="email">Send to...</label>
      <input type="text" id="email" name="to" placeholder="Send to email..."><br>

      <label for="country">Country</label>
      <select id="country" name="country">
      <option value="usa">USA</option>
      <option value="international">international</option>
      </select>
      <br>

      <label for="subject-1">Subject</label>
      <input type="text" name="subject" placeholder="subject"><br>

      <label for="subject">Enter message below</label>
          <div id="message">
          250 characters remaining
          </div>
          <textarea id="subject" onkeydown="keyDown()" name="message" placeholder="Enter message here..." style="height:200px"></textarea><br>
      <input type="submit" value="Submit">
    </form>

    <script>
      var characterCount = document.querySelector("#message");
      var textBox = document.querySelector("#subject");

      function keyDown(e) {
        var length = textBox.value.length;
        characterCount.innerText = (250 - length) + " characters remaining";

        if (length >= 250) {
          event.preventDefault();
          characterCount.innerText = " Maximum characters reached!";
        }
      }
    </script>
  </div>
</div>
